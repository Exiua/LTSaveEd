<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="150"
        x:Class="LTSaveEd.Views.PopupWindow"
        Title="PopupWindow"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        WindowStartupLocation="CenterOwner">
    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Panel Margin="40">
            <StackPanel Orientation="Vertical" Spacing="50">
                <TextBlock Text="Message" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Spacing="50" HorizontalAlignment="Center">
                    <Button>Yes</Button>
                    <Button>No</Button>
                </StackPanel>
            </StackPanel>
        </Panel>
    </Panel>
</Window>
