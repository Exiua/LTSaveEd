            </MudPaper>
            <MudPaper Class="d-flex mr-10 pa-4" Elevation="0">
                <MudNumericField HideSpinButtons="true" @bind-Value="@AttributesData.SpellCostModifier.Value" Label="Spell Cost Modifier"/>
                <MudSpacer/>
                <MudNumericField HideSpinButtons="true" @bind-Value="@AttributesData.IceDamage.Value" Label="Ice Damage"/>
            </MudPaper>
            <MudPaper Class="d-flex mr-10 pa-4" Elevation="0">
