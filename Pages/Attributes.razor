                <MudSpacer/>
                <MudNumericField HideSpinButtons="true" @bind-Value="@AttributesData.PoisonDamage.Value" Label="Poison Damage"/>
            </MudPaper>
        </MudCardContent>
    </MudForm>
</MudCard>

@code {
    private LTSaveEd.Models.Attributes AttributesData => SaveData.CurrentCharacter.Attributes;

    protected override void OnInitialized()
    {
        if (!SaveData.Initialized)
        {
            NavigationManager.NavigateTo("/");
        }
    }

}