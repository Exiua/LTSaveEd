@using LTSaveEd.Models.CharacterData

<MudPaper Class="p-4" Elevation="0">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12">
            <MudText Typo="Typo.h6" Align="Align.Center">@Label</MudText>
        </MudItem>
    </MudGrid>
    <MudGrid Justify="Justify.Center" Spacing="4">
        <MudItem xs="1" Class="d-flex align-center justify-center mt-3">
            <MudText>Desire:</MudText>
        </MudItem>
        <MudItem xs="3">
            <MudSelect @bind-Value="Fetish.DesireValue" T="string" Style="width: 150px;">
                <MudSelectItem Value="@("Love")">Love</MudSelectItem>
                <MudSelectItem Value="@("Like")">Like</MudSelectItem>
                <MudSelectItem Value="@("Indifferent")">Indifferent</MudSelectItem>
                <MudSelectItem Value="@("Dislike")">Dislike</MudSelectItem>
                <MudSelectItem Value="@("Hate")">Hate</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="1" Class="d-flex align-center justify-center mt-3">
            <MudText>Exp:</MudText>
        </MudItem>
        <MudItem xs="2">
            <IntField Attribute="@Fetish.Xp" Label="Experience" Max="200"/>
        </MudItem>
        <MudItem xs="3" Class="d-flex align-center justify-center mt-3">
            <MudCheckBox @bind-Value="Fetish.Owned.Exists" Label="Owned:" LabelPosition="LabelPosition.Start" />
        </MudItem>
    </MudGrid>
</MudPaper>

@code {
    /// <summary>
    ///     The fetish component of the character being edited.
    /// </summary>
    [Parameter] public required Fetish Fetish { get; set; }
    
    /// <summary>
    ///    The label to display for this component.
    /// </summary>
    [Parameter] public required string Label { get; set; }
}