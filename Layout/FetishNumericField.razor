@using LTSaveEd.Models
<MudPaper Class="p-4" Elevation="0">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12">
            <MudText Typo="Typo.h6" Align="Align.Center">@Label</MudText>
        </MudItem>
    </MudGrid>
    <MudGrid Justify="Justify.Center" Spacing="4">
        <MudItem xs="1" Class="d-flex align-center justify-center mt-3">
            <MudText>Exp:</MudText>
        </MudItem>
        <MudItem xs="2">
            <MudNumericField HideSpinButtons="true" @bind-Value="@Fetish.Xp.Value" Label="Experience"/>
        </MudItem>
    </MudGrid>
</MudPaper>

@code {
    [Parameter] public required Fetish Fetish { get; set; }
    [Parameter] public required string Label { get; set; }
}